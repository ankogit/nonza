# HTTP Server
HTTP_PORT=8000
HTTP_READ_TIMEOUT=100s
HTTP_WRITE_TIMEOUT=100s

# WebRTC Platform
WEBRTC_PLATFORM=livekit
WEBRTC_URL=ws://localhost:7880
WEBRTC_API_KEY=devkey
WEBRTC_API_SECRET=devsecret

# Audio Settings
AUDIO_CODEC=opus
AUDIO_BITRATE=32000
AUDIO_SAMPLE_RATE=48000
AUDIO_USE_INBAND_FEC=true
AUDIO_CHANNELS=1

# Security
JWT_SECRET=your_jwt_secret_min_32_chars_change_in_production
JWT_ACCESS_TOKEN_TTL=30m
JWT_REFRESH_TOKEN_TTL=7d
E2EE_ENABLED=true
E2EE_REQUIRE=true
E2EE_KEY_ROTATION_INTERVAL=1h
E2EE_FALLBACK_WARNING=true

# Rate Limiting
RATE_LIMIT_TOKENS_PER_MINUTE=20
RATE_LIMIT_BURST=5

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=nonza
DB_PASSWORD=nonza_password
DB_DATABASE=nonza
DB_SSL_MODE=disable

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_USE_SSL=false

# LiveKit Server (если self-host)
LIVEKIT_SERVER_HOST=localhost
LIVEKIT_SERVER_PORT=7880
LIVEKIT_REDIS_URL=redis://localhost:6379/0

# Cache
CACHE_TTL=60s

# Environment
ENV=local
DEBUG=false

# CORS (production): origins через запятую, с которых разрешены запросы к API
# Пример: https://meet.nonza.ru,https://www.nonza.ru
# CORS_ALLOWED_ORIGINS=https://meet.nonza.ru
